{
  "name": "acp-lsp",
  "version": "0.1.0",
  "description": "Language Server Protocol implementation for AI Context Protocol (ACP)",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:server": "pnpm --filter @acp-lsp/server build",
    "build:client": "pnpm --filter @acp-lsp/client build",
    "dev": "turbo run dev",
    "test": "vitest",
    "test:unit": "vitest run --project unit",
    "test:integration": "vitest run --project integration",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "typecheck": "turbo run typecheck",
    "package:vsix": "./scripts/package-vsix.sh",
    "sync:schemas": "./scripts/sync-schemas.sh",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/acp-protocol/acp-lsp.git"
  },
  "author": "ACP Protocol Team",
  "license": "MIT"
}