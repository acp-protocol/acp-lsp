{
  "name": "@acp-lsp/shared",
  "version": "0.1.0",
  "description": "Shared types and utilities for ACP Language Server",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup src/index.ts --format esm --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "tsup": "^8.0.1",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}